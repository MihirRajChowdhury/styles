{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "sourceMap": true,
    "rootDir": "./package",
    "outDir": "./dist",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "esModuleInterop": true,
  },
  "include": ["package/**/*.ts", "package/**/*.tsx", "package/**/*.json"],
  "exclude": ["node_modules", "test", "dist"],
}